<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.safesoftapplication.vM.authVM.AuthentifivationVM" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.authentification.LoginFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/idLogin"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:hint="@string/strLogin"
                android:inputType="textPersonName"
                android:text="@={viewModel.loginClient}"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/idPSW"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/white"
                android:gravity="center"
                android:hint="@string/strPassword"
                android:inputType="textPassword"
                android:text="@={viewModel.pswClient}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.clicLogin()}"
                android:text="@string/strBtnLogin" />


            <Button
                android:id="@+id/btnInscription"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.clicInscription()}"
                android:text="@string/strBtnInscription" />

        </LinearLayout>

    </LinearLayout>
</layout>